{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "./dist",
        "paths": {
            "@gzh2xhs/shared-config": ["../../packages/shared-config/dist"],
            "@gzh2xhs/shared-errors": ["../../packages/shared-errors/dist"],
            "@gzh2xhs/shared-logger": ["../../packages/shared-logger/dist"],
            "@gzh2xhs/shared-validation": ["../../packages/shared-validation/dist"],
            "@gzh2xhs/shared-http": ["../../packages/shared-http/dist"],
            "@gzh2xhs/shared-types": ["../../packages/shared-types/dist"]
        }
    },
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
