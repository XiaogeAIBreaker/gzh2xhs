{
    "name": "gzh2xhs",
    "version": "0.2.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky install",
        "dep:json": "depcruise --config dependency-cruiser.config.cjs --output-type json src > docs/deps.json",
        "dep:check": "depcruise --config dependency-cruiser.config.cjs src",
        "build:utils": "npm run build --workspace @gzh2xhs/utils",
        "build:shared": "npm run build --workspace @gzh2xhs/shared-config && npm run build --workspace @gzh2xhs/shared-errors && npm run build --workspace @gzh2xhs/shared-logger && npm run build --workspace @gzh2xhs/shared-validation && npm run build --workspace @gzh2xhs/shared-http && npm run build --workspace @gzh2xhs/shared-types",
        "dev:api": "npm run start:dev --workspace apps/api",
        "build:api": "npm run build --workspace apps/api",
        "start:api": "npm run start:prod --workspace apps/api"
    },
    "dependencies": {
        "autoprefixer": "^10.4.21",
        "framer-motion": "^12.23.25",
        "ioredis": "^5.4.1",
        "jszip": "^3.10.1",
        "lucide-react": "^0.556.0",
        "next": "14.2.18",
        "playwright": "^1.55.0",
        "react": "^18",
        "react-dom": "^18",
        "sharp": "^0.32.6",
        "swagger-ui": "5.30.3",
        "swagger-ui-react": "5.30.3",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitest/coverage-v8": "^2.1.9",
        "dependency-cruiser": "^16.10.4",
        "eslint": "^8",
        "eslint-config-next": "14.2.18",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-sonarjs": "^3.0.5",
        "eslint-plugin-unused-imports": "^3.2.0",
        "husky": "^9.1.0",
        "jsdom": "^27.3.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^3.4.1",
        "typescript": "^5",
        "vitest": "^2.0.5"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.{json,md,css}": [
            "prettier --write"
        ]
    }
}
