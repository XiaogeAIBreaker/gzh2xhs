{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "declaration": true,
        "emitDeclarationOnly": false,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"]
}
